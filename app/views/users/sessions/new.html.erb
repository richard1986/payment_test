<div class="container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, class: "was-validated", url:  session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "custom-control-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control is-invalid" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "custom-control-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
  
</div>
